<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/btn_star_big_off"
            android:contentDescription="Add to favorites"
            app:tint="#FFC107"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRouteTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Route Title"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRouteDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Route description..."
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRouteTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRouteDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:text="Distance"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvRouteDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="0 km"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:text="Duration"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRouteDistance"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvRouteDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="0 min"
            app:layout_constraintTop_toBottomOf="@+id/tvRouteDistance"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:text="Difficulty"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRouteDuration"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvRouteDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Easy"
            app:layout_constraintTop_toBottomOf="@+id/tvRouteDuration"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:text="Created by"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRouteDifficulty"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvRouteCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Unknown"
            app:layout_constraintTop_toBottomOf="@+id/tvRouteDifficulty"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Share Route"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/tvRouteCreator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

