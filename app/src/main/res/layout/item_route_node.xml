<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@android:color/darker_gray"
    app:strokeWidth="1dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
            android:id="@+id/labelNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No." />

        <Spinner
            android:id="@+id/spinnerNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/labelLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Location" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <AutoCompleteTextView
                android:id="@+id/editLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/buttonMoreOptions"
                android:minHeight="48dp"
                android:background="@drawable/bg_input_rect"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:completionThreshold="3"
                android:hint="e.g., 750 Maple Ave" />

            <ImageButton
                android:id="@+id/buttonMoreOptions"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="..."
                android:textSize="18sp"
                android:contentDescription="Use Common Locations"
                android:src="@android:drawable/ic_menu_more" />

        </RelativeLayout>

        <TextView
            android:id="@+id/errorLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="Location cannot be empty" />

        <TextView
            android:id="@+id/labelPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="The place you're looking for" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/buttonMoreOptionsPlace"
                android:minHeight="48dp"
                android:background="@drawable/bg_input_rect"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:hint="e.g., an Instagrammable cafÃ©" />

            <ImageButton
                android:id="@+id/buttonMoreOptionsPlace"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="..."
                android:textSize="18sp"
                android:contentDescription="Use Common Places"
                android:src="@android:drawable/ic_menu_more" />

        </RelativeLayout>

        <TextView
            android:id="@+id/errorPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="The place you're looking for cannot be empty" />

        <TextView
            android:id="@+id/labelDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Distance" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textKm"
                android:minHeight="48dp"
                android:background="@drawable/bg_input_rect"
                android:inputType="numberDecimal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:hint="e.g., 2" />

            <TextView
                android:id="@+id/textKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="km"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/errorDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="Distance cannot be empty" />

        <TextView
            android:id="@+id/labelAdditional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Additional requirements" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editAdditionalRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:background="@drawable/bg_input_rect"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:paddingStart="8dp"
                android:paddingEnd="48dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:hint="e.g., under $20 per person" />

            <ImageButton
                android:id="@+id/buttonClearAdditional"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Clear Additional Requirements"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone" />

        </FrameLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Delete"
            android:visibility="gone" />

    </FrameLayout>
</com.google.android.material.card.MaterialCardView>